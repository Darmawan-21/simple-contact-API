<div class="container">
    <div class="row">
        <div class="col-md-6 mt-4">
            <h2>Edit Contact Form</h2>
            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    <ul>
                        <% errors.forEach(err => { %>
                         <li><%= err.msg %> </li>
                        <% }) %>
                        
                    </ul>
                  </div> 
             
            <% } %>
            <form method="post" action="/contact/update">
                <input type="hidden" name="oldName" value="<%= (contact.oldName) ? contact.oldName :contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>"/>
                </div>
                <div class="mb-3">
                    <label for="hp" class="form-label">HP</label>
                    <input type="text" class="form-control" id="hp" name="hp" required value="<%= contact.hp %>"/>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required value="<%= contact.email %>"/>
                </div>
              
                
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
    </div>
</div>